<!-- show.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= product.name %></title>
</head>
<body>
    <h1><%= product.name %></h1>
    <ul>
        <li>Price: $<%= product.price %></li>
        <li>Category: <a href="/products?category=<%= product.category %>"><%= product.category %></a></li>
    </ul>
    <a href="/products">All products</a> <br>   <!-- this is for to get back to the products page -->
    <a href="/products/<%= product._id %>/edit">Edit</a> <!-- this is for to get back to the edit page -->

    <form action="/products/<%= product._id %>?_method=DELETE" method="POST">
        <button>Delete</button>
    </form>
</body>
</html>